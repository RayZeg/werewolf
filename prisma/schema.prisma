generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String

  gameId String?
  Game   Game?   @relation(fields: [gameId], references: [id])

  @@index([gameId])
}

model Game {
  id      String @id @default(uuid())
  name    String
  ownerId String @unique

  roles   Role[]
  players User[]

  @@index([ownerId])
}

model Role {
  id          String @id @default(uuid())
  name        String
  description String

  gameId String
  Game   Game   @relation(fields: [gameId], references: [id])

  @@index([gameId])
}
